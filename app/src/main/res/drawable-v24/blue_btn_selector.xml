<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <solid
                android:color="@color/blue"
                />

            <padding
                android:top="5dp"
                android:left="5dp"
                android:bottom="5dp"
                android:right="5dp"
                />

            <corners
                android:radius="10dp"
                />

        </shape>
    </item>


    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/white"
                android:endColor="@color/blue"
                android:angle="270"/>

            <padding
                android:top="5dp"
                android:left="5dp"
                android:bottom="5dp"
                android:right="5dp"
                />
            <corners
                android:radius="10dp"
                />
        </shape>
    </item>

</selector>